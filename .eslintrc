{
    "root": true,
    "env": {
        "es6": true,
        "browser": true,
        "node": true,
        "jquery": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "no-console": [
            "error",
            {
                "allow": [
                    "warn",
                    "error"
                ]
            }
        ],
        "react/prop-types": 0,
        "react/jsx-props-no-spreading": 0
    },
    "globals": {
        "jQuery": true,
        "$": true
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}